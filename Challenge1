import java.util.Scanner;
public class Challenge1 {
	
	public static void main(String[] args){	
	
		// Variable and object declarations | Age, name, username
		Scanner console = new Scanner(System.in);
		
		String username = null;
		String name = null;
		byte age = 0;
		
		// Asks user for his/her name		
		System.out.print("Hey m8! What's your name? \t");
		name = console.next();
		
		// Asks user for his/her age
		System.out.print("Hey m8! What's your age? \t");
		age = console.nextByte();
		
		// Asks user for his/her account username
		System.out.print("Hey m8! What's your username? \t");
		username = console.next();
		
		System.out.println("Hey " + name +  ", your " + age +  " years old, and your account username is " + username);
		
		console.close();
	}		
} 
